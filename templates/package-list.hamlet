<div .container .content>
    <h1>Packages
    <div .packages>
        <table .table>
            <thead>
                <th>Package
                <th>Synopsis
            <tbody>
                $forall (name, version, synopsis) <- packages
                    <tr>
                        <td>
                            <a href=@{PackageR name}>#{name}-#{version}
                        <td>
                            #{strip synopsis}
